@model List<Entidades.NecesidadesDonacionesInsumos>

@{
    ViewBag.Title = "Donación de insumos";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}
<br>
<br>
<center><h2>Donación de insumos</h2></center>

<div class="card mb-3 mt-5">
    <div class="card-body  mt-5">
        <h5 class="card-title text-center">Realizar donación de insumos</h5><br>


        @using (Html.BeginForm("DonacionInsumos", "DonacionInsumos", FormMethod.Post, new { @class = "login100-form validate-form p-b-33 p-t-5" }))
        {

            @Html.AntiForgeryToken()

            if (ViewBag.mensajeError != null) //Mensaje que esta en el controller.
            {
                <div class="p-3 mb-2 bg-danger text-white">@ViewBag.mensajeError</div>
            } <br />

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Producto solicitado</th>
                        <th scope="col">Cantidad solicitada</th>
                        <th scope="col">Cantidad restante</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <th scope="col">@item.Nombre</th>
                            <th scope="col">@item.Cantidad</th>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
